<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prevent_Edit_Config_After_Creation</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
    Is_Updated__c = TRUE,
    ISCHANGED(Is_Updated__c),
    ($Profile.Name = &quot;System Administrator&quot;)
)</errorConditionFormula>
    <errorMessage>You cannot edit this record once it has been created.</errorMessage>
</ValidationRule>
